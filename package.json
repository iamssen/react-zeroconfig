{
  "name": "react-zeroconfig",
  "version": "3.3.1-alpha.1",
  "description": "Zero config tools for typescript projects",
  "keywords": [
    "zeroconfig",
    "react",
    "typescript",
    "webpack",
    "build",
    "0cjs"
  ],
  "author": "Seoyeon Lee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-zeroconfig/react-zeroconfig.git"
  },
  "bugs": {
    "url": "https://github.com/react-zeroconfig/react-zeroconfig/issues"
  },
  "homepage": "https://github.com/react-zeroconfig/react-zeroconfig",
  "engines": {
    "node": ">=10"
  },
  "main": "lib/index.js",
  "types": "./typings.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "build:watch": "npm run clean && tsc --watch --project tsconfig.build.json",
    "test": "jest --colors",
    "test:e2e:build": "sh test/e2e/build.sh",
    "coverage": "jest --colors --coverage",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "lint": "tslint \"src/**/*.{ts,tsx}\""
  },
  "bin": {
    "zeroconfig-webapp-scripts": "./bin/zeroconfig-webapp-scripts",
    "zeroconfig-package-scripts": "./bin/zeroconfig-package-scripts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "pre-commit": [
    "test",
    "lint"
  ],
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "**/__test?(s)__/**/*.ts?(x)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-destructuring": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@loadable/babel-plugin": "^5.10.0",
    "@loadable/webpack-plugin": "^5.7.1",
    "@svgr/webpack": "^4.3.0",
    "@types/react": "^16.8.19",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.0",
    "babel-plugin-named-asset-import": "^0.3.2",
    "browser-sync": "^2.26.5",
    "browserslist": "^4.6.1",
    "cfonts": "^2.4.3",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "css-loader": "^2.1.1",
    "file-loader": "^4.0.0",
    "fork-ts-checker-webpack-plugin-alt": "^0.4.14",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.19.1",
    "jest": "^24.7.1",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.7.0",
    "minimist": "^1.2.0",
    "moment": "^2.24.0",
    "multiplerun": "^0.2.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "package-json": "^6.3.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^8.0.0",
    "postcss-preset-env": "^6.6.0",
    "postcss-safe-parser": "^4.0.1",
    "prompts": "^2.1.0",
    "raw-loader": "^3.0.0",
    "react-dev-utils": "^9.0.1",
    "resolve": "^1.11.1",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "sass-loader": "^7.1.0",
    "semver": "^6.1.1",
    "source-map-support": "^0.5.12",
    "style-loader": "^0.23.1",
    "terser": "^4.0.0",
    "terser-webpack-plugin": "^1.3.0",
    "tmp": "^0.1.0",
    "tslint-loader": "^3.5.4",
    "type-fest": "^0.5.2",
    "typescript": "^3.5.1",
    "url-loader": "^2.0.0",
    "webpack": "4.28.4",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.2",
    "@types/browser-sync": "^3001.0.28-alpha",
    "@types/browserslist": "^4.4.0",
    "@types/compression": "^0.0.36",
    "@types/fs-extra": "^7.0.0",
    "@types/glob": "^7.1.1",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/http-proxy-middleware": "^0.19.2",
    "@types/jest": "^24.0.13",
    "@types/less": "^3.0.0",
    "@types/mini-css-extract-plugin": "^0.2.1",
    "@types/minimist": "^1.2.0",
    "@types/node-sass": "^4.11.0",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.4",
    "@types/prompts": "^2.4.0",
    "@types/react-dev-utils": "^9.0.1",
    "@types/resolve": "^0.0.8",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^6.0.0",
    "@types/source-map-support": "^0.5.0",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/tmp": "^0.1.0",
    "@types/webpack": "^4.4.32",
    "@types/webpack-bundle-analyzer": "^2.13.1",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-hot-middleware": "^2.16.5",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.6.3",
    "coveralls": "^3.0.4",
    "husky": "^2.4.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-ssen-rules": "^1.3.0"
  }
}
