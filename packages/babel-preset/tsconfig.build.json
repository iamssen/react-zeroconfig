{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "lib",
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./src/**/__tests__",
    "./src/**/__test__"
  ]
}